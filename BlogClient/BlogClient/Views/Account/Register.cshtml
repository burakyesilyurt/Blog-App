@model UserRegister
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>
                            <div asp-validation-summary="All"></div>
                            <form asp-action="Register" asp-controller="Account" method="post">
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="@Model.Email" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="@Model.Email">Email</label>
                                </div>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="@Model.FirstName" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="@Model.FirstName">First Name</label>
                                </div>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="@Model.LastName" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="@Model.LastName">Last Name</label>
                                </div>


                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input type="password" asp-for="@Model.PasswordHash" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="@Model.PasswordHash">Password</label>
                                </div>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="@Model.ConfirmPassword">Confirm Password</label>
                                </div>

                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <select asp-for="@Model.Role" class="form-control form-control-lg">
                                        <option value="">Select Role</option>
                                        <option value="1">User</option>
                                        <option value="2">Author</option>
                                    </select>
                                    <label class="form-label" asp-for="@Model.Role">Role</label>
                                </div>

                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-light btn-lg px-5" type="submit">Sign Up</button>
                            </form>

                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                            </div>

                        </div>

                        <div>
                            <p class="mb-0">
                                Do you have an account? <a asp-action="Login" asp-controller="Account" class="text-white-50 fw-bold">Login In</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>